<!DOCTYPE html>
<html>
  <head>
    <title>DESIGN FINDER</title>
    <%= csrf_meta_tags %>
 		<meta name="viewport" content="width=device-width, initial-scale=1">
 		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://use.fontawesome.com/releases/v5.6.3/css/all.css" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  	<% if flash[:notice] %>
    	<div class="notification is-primary global-notification">
  	  	<p class="notice"><%= notice %></p>
    	</div>
   	<% end %>
    <% if flash[:alert] %>
    <div class="notification is-primary global-notification">
      <p class="alert"><%= alert %></p>
    </div>
    <% end %>
     <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to root_path, class:"navbar-item" do %>
          <h1 class="title is-5 has-text-white">D E S I G N F I N D E R</h1>
         
        <% end  %>
 

      <div id="navbar" class="navbar-menu">
            </div>
          </div>
        </div>
      </div>
    </nav> 
         
 <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              
              <% if user_signed_in? %>

              <p class="control">
                <%= link_to new_shot_path, class:"button is-link" do %>
              <i class="fas fa-cloud-upload-alt"> UPLOAD</i>                
              <% end %>
              </p>
              <p class="control">
                <%= link_to current_user.name, edit_user_registration_path, class:"button is-link fas fa-user-cog" %>
              </p>
              <p class="control">
               <%= link_to destroy_user_session_path, method: :delete, class:"button is-link" do %>
                <i class="fas fa-sign-out-alt"> Log Out</i>
                <% end %>
               </p>
              
              <% else %>
              
              <p class="control">
                <%= link_to new_user_session_path, class:"button is-link" do %>
                <i class="fas fa-sign-out-alt"> Sign In</i>
                <% end %>
              </p>
              
              
               <p class="control">
                <%= link_to new_user_registration_path, class:"button is-link" do %>
                <i class="fas fa-user-plus"> Sign Up</i>
                <% end %>
              </p>
              <% end %>
              
              
            </div>
          </div>
        </div>
    <%= yield %>
    <footer>(c) KEIJI OKITA PORTFOLIO 2020</footer>
  </body>
</html>